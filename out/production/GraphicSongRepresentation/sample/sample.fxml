<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@controller.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <left>
        <VBox fx:id="leftPane" alignment="TOP_CENTER" prefWidth="200">
            <padding> <Insets bottom="10" left="0" right="0" top="10" /> </padding>
            <VBox alignment="TOP_CENTER" spacing="20">
                <padding> <Insets bottom="20" left="0" right="0" top="0" /> </padding>
                <ImageView id="k" fitHeight="200" fitWidth="200" preserveRatio="true">
                    <image>
                        <Image url="@../../../../Downloads/89db9ef44ae03b94b8414fb4fd9ed4ce.jpg" />
                    </image>
                </ImageView>
                <Button fx:id="refresh" onAction="#refreshPage" prefHeight="40" prefWidth="160" styleClass="redButton" text="Odśwież" />
            </VBox>
            <VBox fx:id="VboxDoPaska">
                <Button fx:id="day" onAction="#dayButton" prefHeight="50" prefWidth="200" styleClass="normalButton" text="Dzień" />
                <Button fx:id="fav" onAction="#favoriteButton" prefHeight="50" prefWidth="200" styleClass="normalButton" text="Ulubione" />
                <Button fx:id="sett" onAction="#settingsButton" prefHeight="50" prefWidth="200" styleClass="normalButton" text="Ustawienia" />
            </VBox>
        </VBox>
    </left>

</BorderPane>
